@model PasswordResetVM

@{
    ViewData["Title"] = "Şifre Yenileme";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (ViewBag.status == "success")
        {
            <div class="alert alert-info">Şifreniz başarılı bir şekilde değiştirildi.</div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş İçin Tıklayın</a>
        }
        else
        {
            <h4>Yeni Şifre Alanı</h4>
            <hr />
            <form asp-action="ResetPasswordConfirm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>