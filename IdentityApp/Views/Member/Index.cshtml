@model UserVM

@{
    ViewData["Title"] = "Üye Anasayfa";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-md-3">
        <img src="@Model.Picture" style="width:100%; height:200px;">
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-Posta Adresi</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon No</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        @Model.PhoneNumber
                    }
                    else
                    {
                        <span class="text-muted">Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>
                    @if (Model.BirthDay != null)
                    {
                        @Model.BirthDay?.ToShortDateString()
                    }
                    else
                    {
                        <span class="text-muted">Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>
                    @if (!String.IsNullOrEmpty(Model.City))
                    {
                        @Model.City
                    }
                    else
                    {
                        <span class="text-muted">Belirtilmemiş</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Cinsiyet</th>
                <td>
                    @if (Model.Gender == 0)
                    {
                        <span class="text-muted">@Model.Gender</span>
                    }
                    else
                    {
                        @Model.Gender
                    }
                </td>
            </tr>
        </table>
    </div>
</div>

