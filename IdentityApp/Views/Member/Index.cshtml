@model UserVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-md-3">
    <img src="/UserImages/user.png" style="width:100%; height:100%;">
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-Posta Adresi</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon No :</th>
                @if (Model.PhoneNumber == null)
                {
                    <td><small class="text-muted">Numara Yok</small></td>
                }
                else
                {
                    <td>@Model.PhoneNumber</td>
                }

            </tr>
        </table>
    </div>
</div>

