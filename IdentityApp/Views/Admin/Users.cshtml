@model List<AppUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>Üyeler</h3>
<hr />

<table class="table table-bordered table-striped">
    <tr>
        <th>User Id</th>
        <th>Kullanıcı Adı</th>
        <th>E-Posta Adresi</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" class="text-center text-danger">Hiç bir üye kaydı yok</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
       {
           <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
        </tr>
       }
    }
</table>

