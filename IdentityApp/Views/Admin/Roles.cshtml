@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
        </tr>
    }
</table>
<a asp-action="RoleCreate" asp-controller="Admin" class="btn btn-info">Role Oluştur</a>



