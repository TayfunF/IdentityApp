@model List<AppRole>

@{
    ViewData["Title"] = "Roller";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Roller</h3>
<hr />
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
        <th>Rol Güncelle</th>
        <th>Rol Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a class="btn btn-warning" asp-route-id="@item.Id" asp-action="RoleUpdate" asp-controller="Admin">Güncelle</a></td>
            <td>
                <form asp-route-id="@item.Id" asp-action="RoleDelete" asp-controller="Admin" method="post">
                    <button class="btn btn-danger" type="submit">Sil</button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="RoleCreate" asp-controller="Admin" class="btn btn-info">Role Oluştur</a>



